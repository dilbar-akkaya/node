{
  "compilerOptions": {
    "target": "es2020",
    "allowJs": true,                        
    "module": "CommonJS",                    
    "lib": ["dom", "es6"],                    
    "outDir": "dist",                          
    "baseUrl": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "types/**/*.d.ts", "types/*.d.ts"], 
  "typeRoots": [
    "./node_module/@types",
    "./src/types"
],
}
